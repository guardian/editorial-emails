{
  "name": "editorial-emails",
  "version": "0.1.0",
  "description": "Node service for generating editorial emails",
  "main": "index.js",
  "repository": "git@github.com:guardian/editorial-emails.git",
  "author": "Nicolas Long <nicolas.long@theguardian.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "test": "jest",
    "tsc": "tsc --noEmit",
    "tslint": "tslint -c tslint.json 'src/**/*.ts'",
    "fix": "tslint -c tslint.json --fix 'src/**/*.ts'",
    "cdk": "cdk",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "synth": "cdk --profile frontend synth > cloudformation.yaml",
    "deploy": "cdk --profile frontend deploy",
    "prebuild": "rm -rf target",
    "build": "tsc",
    "postbuild": "cp package.json target/ && cp yarn.lock target/ && cd target && yarn install --production && cd .. && cdk --profile frontend synth > cloudformation.yaml",
    "upload-artifact": "node-riffraff-artifact"
  },
  "devDependencies": {
    "@aws-cdk/aws-apigateway": "^1.77.0",
    "@aws-cdk/aws-iam": "^1.77.0",
    "@aws-cdk/aws-lambda": "^1.77.0",
    "@aws-cdk/aws-route53": "^1.77.0",
    "@aws-cdk/aws-s3": "^1.77.0",
    "@aws-cdk/core": "^1.77.0",
    "@babel/core": "^7.7.5",
    "@guardian/node-riffraff-artifact": "^0.1.0",
    "@storybook/addon-actions": "^6.1.10",
    "@storybook/addon-knobs": "^6.1.10",
    "@storybook/addon-links": "^6.1.10",
    "@storybook/addons": "^6.1.10",
    "@storybook/preset-typescript": "^3.0.0",
    "@storybook/react": "^6.1.10",
    "@types/aws-serverless-express": "^3.3.1",
    "@types/compression": "^1.0.1",
    "@types/express": "^4.17.1",
    "@types/jest": "^26.0.18",
    "@types/node": "^14.14.11",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/sanitize-html": "^1.20.2",
    "aws-cdk": "^1.77.0",
    "babel-loader": "^8.0.6",
    "git-hooks": "^1.1.10",
    "jest": "^26.6.3",
    "react-docgen-typescript-loader": "^3.6.0",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.11",
    "ts-node-dev": "^1.0.0-pre.43",
    "tslint": "^6.1.3",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "@guardian/image": "^1.0.2",
    "@guardian/src-foundations": "^0.2.3",
    "@types/domhandler": "^2.4.1",
    "@types/react-html-parser": "^2.0.1",
    "aws-sdk": "^2.814.0",
    "aws-serverless-express": "^3.3.6",
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "minify-css-string": "^1.0.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-html-parser": "^2.0.2",
    "sanitize-html": "^2.2.0"
  }
}
